{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",

    /* Modules */
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Paths */
    "baseUrl": "./src",
    "outDir": "./dest",
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": ["node_modules"]
}
